<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tab_text_appearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_19_sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">1.3</item>
        <item name="android:shadowDy">1.5</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/padding_10dp</item>
        <item name="cornerSizeTopLeft">@dimen/padding_10dp</item>
        <item name="cornerSizeBottomRight">@dimen/padding_20dp</item>
        <item name="cornerSizeBottomLeft">@dimen/padding_20dp</item>
    </style>

    <style name="Widget.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="shapeAppearance">
            @style/ShapeAppearance.M3.Comp.NavigationBar.ActiveIndicator.Shape
        </item>
        <item name="android:color">@color/white</item>
    </style>

</resources>