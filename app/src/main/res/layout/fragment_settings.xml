<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_settings"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:background="@drawable/bg_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.97"
        app:layout_constraintHeight_percent="0.97"
        android:orientation="vertical">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <Spinner
            android:scrollbars="none"
            android:popupBackground="@drawable/blue_dropdown"
            android:dropDownWidth="@dimen/width_170dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/spinner_arena"
            android:layout_width="@dimen/width_170dp"
            android:layout_height="@dimen/height_100dp"
            android:background="@drawable/style_spinner_blue"
           >
        </Spinner>

        <Spinner
            android:scrollbars="none"
            android:popupBackground="@drawable/blue_dropdown"
            android:dropDownWidth="@dimen/width_170dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/spinner_currencies"
            android:layout_width="@dimen/width_170dp"
            android:layout_height="@dimen/height_100dp"
            android:background="@drawable/style_spinner_blue"
            android:gravity="center">

        </Spinner>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Spinner
            android:scrollbars="none"
            android:id="@+id/spinner_gold_to_gem"
            android:dropDownWidth="@dimen/width_170dp"
            android:layout_width="@dimen/width_170dp"
            android:layout_height="@dimen/height_100dp"
            android:background="@drawable/style_spinner_black"
            android:popupBackground="@drawable/black_dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:scrollbars="none"
            android:id="@+id/currency_to_gem"
            android:layout_width="@dimen/width_170dp"
            android:layout_height="@dimen/height_100dp"
            android:dropDownWidth="@dimen/width_170dp"
            android:background="@drawable/style_spinner_black"
            android:popupBackground="@drawable/black_dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>