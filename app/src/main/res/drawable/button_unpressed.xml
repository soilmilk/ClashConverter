<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90"
                android:endColor="#FF555555" android:startColor="#8E8C8C" />
            <corners android:radius="@dimen/padding_5dp" />
        </shape>
    </item>

    <item
        android:left="@dimen/elevation_2dp"
        android:right="@dimen/elevation_4dp"
        android:top="1dp"
        android:bottom="@dimen/padding_5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/clash_white"/>
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>