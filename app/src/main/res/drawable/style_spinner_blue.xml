<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <gradient android:startColor="@color/black" android:endColor="#8A8B8C" android:angle="270" />
                <corners android:radius="20dp" />

            </shape>
        </item>
        <item
            android:left="@dimen/elevation_4dp"
            android:right="@dimen/elevation_4dp"
            android:bottom="@dimen/elevation_8dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/dark_blue" />
                <corners android:radius="20dp" />

            </shape>
        </item>
        <item android:drawable="@drawable/baseline_arrow_drop_down_24" android:gravity="center|end"  android:height="50dp" android:width="50dp"/>
    </layer-list>
</item>
</selector>